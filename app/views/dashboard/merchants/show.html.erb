<section id='merchant-dashboard'>
<h1>Merchant Dashboard</h1>
<br/>

<%= link_to "My Items", dashboard_items_path %>
<br/>
<br/>
<p>Name: <%= @merchant.name %></p>
<p>Address: <%= @merchant.street %></p>
<p>        <%= @merchant.city %>, <%= @merchant.state  %> <%= @merchant.zip %></p>
<p>Email: <%= @merchant.email %></p><br/>

<% @orders.each do |order| %>
  <section id="order-info-<%= order.id %>">
    <p><%= link_to "Order: #{order.id}", dashboard_order_path(order) %></p>
    <p>Order placed on: <%= order.created_at.to_s(:long) %></p>
    <p>Quantity of items in the order: <%= order.merchant_order_total(order) %></p>
    <p>Total value of items for the order: <%= number_to_currency(order.merchant_order_total_price(order)) %></p><br/>
  </section>
<% end %>
</section>