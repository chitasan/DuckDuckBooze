<section class='edit-user-form'>
<h2>Edit Profile for <%= current_user.name %></h2>

<%= form_for :user do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </p> 
  <p>
    <%= f.label :password_confirmation, "Confirm Password" %><br>
    <%= f.text_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :street %><br>
    <%= f.text_field :street %>
  </p>
  <p>
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </p>
  <p>
    <%= f.label :zip %><br>
    <%= f.text_field :zip %>
  </p>

  <div class='submit-button'>
    <%= f.submit %>
  </div>
<% end %>
</section>


